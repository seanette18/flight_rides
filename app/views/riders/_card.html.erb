<div class="card mb-3">
  <h2 class="card-header h4">
    Rider #<%= rider.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Best method of contact</dt>
      <!-- Display best_method_of_contact start -->
      <dd><%= rider.best_method_of_contact %></dd>
      <!-- Display best_method_of_contact end -->

      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= rider.name %></dd>
      <!-- Display name end -->

      <dt>Username</dt>
      <!-- Display username start -->
      <dd><%= rider.username %></dd>
      <!-- Display username end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back rider, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link rider start -->
      <div class="col">
        <%= link_to edit_rider_url(rider), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link rider end -->

      <!-- Delete link rider start -->
      <div class="col">
        <%= link_to rider, method: :delete, data: { confirm: "Do you really want to delete this rider?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link rider end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(rider.updated_at) %> ago
  </div>
</div>
