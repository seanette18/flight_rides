<%= search_form_for @q, :class => collapse_search_form, :id => "trips_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :trip_details_cont, "Trip details contains" %>
    <%= f.text_field :trip_details_cont, :class => "form-control", :placeholder => "Trip details contains" %>
  </div>

  <div class="form-group">
    <%= f.label :desired_departure_time, "Desired departure time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='desired_departure_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :desired_departure_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Desired departure time greater than or equal to", :data => {:target => '#desired_departure_timegteqPicker'} %>
          <div class="input-group-append" data-target='#desired_departure_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='desired_departure_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :desired_departure_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Desired departure time less than or equal to", :data => {:target => '#desired_departure_timelteqPicker'} %>
          <div class="input-group-append" data-target='#desired_departure_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#desired_departure_timegteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#desired_departure_timelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#desired_departure_timegteqPicker').on("dp.change", function (e) {
              $('#desired_departure_timelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#desired_departure_timelteqPicker').on("dp.change", function (e) {
              $('#desired_departure_timegteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :rider_email_cont, "Rider email contains" %>
    <%= f.text_field :rider_email_cont, :class => "form-control", :placeholder => "Rider email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :dropoff_location_name_of_location_cont, "Dropoff location name_of_location contains" %>
    <%= f.text_field :dropoff_location_name_of_location_cont, :class => "form-control", :placeholder => "Dropoff location name_of_location contains" %>
  </div>

  <div class="form-group">
    <%= f.label :pickup_location_name_of_location_cont, "Pickup location name_of_location contains" %>
    <%= f.text_field :pickup_location_name_of_location_cont, :class => "form-control", :placeholder => "Pickup location name_of_location contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/trips" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#trips_filters">
  Show filters
</a>
