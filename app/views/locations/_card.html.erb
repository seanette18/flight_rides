<div class="card mb-3">
  <h2 class="card-header h4">
    Location #<%= location.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name of location</dt>
      <!-- Display name_of_location start -->
      <dd><%= location.name_of_location %></dd>
      <!-- Display name_of_location end -->

      <dt>Address</dt>
      <!-- Display address start -->
      <dd><%= location.address %></dd>
      <!-- Display address end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back location, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link location start -->
      <div class="col">
        <%= link_to edit_location_url(location), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link location end -->

      <!-- Delete link location start -->
      <div class="col">
        <%= link_to location, method: :delete, data: { confirm: "Do you really want to delete this location?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link location end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(location.updated_at) %> ago
  </div>
</div>
