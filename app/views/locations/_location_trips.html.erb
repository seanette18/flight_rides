<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Trips

    <a data-toggle="collapse" href="#location_trips_new_form">
      Add trip
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.trips.each do |trip| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to trip, trip %>

        <% if current_rider == trip.rider %>
          <%= link_to trip, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_trips_new_form">
        <%= render partial: "locations/location_trips_new_form" %>
      </div>
    </div>

  </ul>
</div>
