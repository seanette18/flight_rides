<% was_validated = location.errors.any? %>

<%= form_with(model: location, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_of_location_class = "form-control" %>
    <% name_of_location_was_invalid = location.errors.include?(:name_of_location) %>

    <% if was_validated %>
      <% if name_of_location_was_invalid %>
        <% name_of_location_class << " is-invalid" %>
      <% else %>
        <% name_of_location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name_of_location %>
    <%= f.text_field :name_of_location, class: name_of_location_class, placeholder: "Enter name of location" %>
    <% if name_of_location_was_invalid %>
      <% location.errors.full_messages_for(:name_of_location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% address_class = "form-control" %>
    <% address_was_invalid = location.errors.include?(:address) %>

    <% if was_validated %>
      <% if address_was_invalid %>
        <% address_class << " is-invalid" %>
      <% else %>
        <% address_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :address %>
    <%= f.text_field :address, class: address_class, placeholder: "Enter address" %>
    <% if address_was_invalid %>
      <% location.errors.full_messages_for(:address).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
