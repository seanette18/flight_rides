<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Pickups

    <a data-toggle="collapse" href="#location_pickups_new_form">
      Add trip
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.pickups.each do |trip| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to trip, trip %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to trip, method: :delete, data: { confirm: "Do you really want to delete this trip" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_pickups_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "locations/location_pickups_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
